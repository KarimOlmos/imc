<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImcResultActivity"
    android:background="@color/bg_app"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp">



    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULTADO"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        >
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewResult"
        android:layout_width="348dp"
        android:layout_height="347dp"
        android:layout_marginBottom="100dp"
        app:cardBackgroundColor="@color/bg_comp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sobrepeso"
            android:textColor="@color/bg_sobrepeso"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            >
        </TextView>

        <TextView
            android:id="@+id/rPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="00.00"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/dPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TextSobrepeso"
            android:textColor="@color/title_text"
            android:textSize="17sp"
            >

        </TextView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonR"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewResult"
        android:layout_marginTop="400dp"
        android:background="@color/bg_button"
        android:text="RE-CALCULAR"
        android:textColor="@color/white"
        android:textSize="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>